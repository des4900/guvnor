  <artifactId>guvnor-test-scenario-editor-api</artifactId>
  <packaging>jar</packaging>

  <name>Test Scenario Editor API</name>
  <description>Test Scenario Editor API</description>

  <dependencies>

    <dependency>
      <groupId>org.kie.guvnor</groupId>
      <artifactId>guvnor-commons-services-api</artifactId>
    </dependency>

    <dependency>
      <groupId>org.drools</groupId>
      <artifactId>drools-guvnor-models-commons</artifactId>
    </dependency>

    <dependency>
      <groupId>org.kie.guvnor</groupId>
      <artifactId>guvnor-core-services-api</artifactId>
    </dependency>

    <dependency>
      <groupId>org.kie.guvnor</groupId>
