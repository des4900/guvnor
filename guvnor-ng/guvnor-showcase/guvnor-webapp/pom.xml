            <compileSourcesArtifact>org.kie.guvnor:guvnor-enum-editor-client</compileSourcesArtifact>
            <compileSourcesArtifact>org.kie.guvnor:guvnor-drl-text-editor-api</compileSourcesArtifact>
            <compileSourcesArtifact>org.kie.guvnor:guvnor-drl-text-editor-client</compileSourcesArtifact>
            <compileSourcesArtifact>org.kie.guvnor:guvnor-factmodel-editor-api</compileSourcesArtifact>
            <compileSourcesArtifact>org.kie.guvnor:guvnor-factmodel-editor-client</compileSourcesArtifact>
